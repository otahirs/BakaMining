@page "/"
@using BakaMining.Utils
@inject Services.Storage.EventLogStore EventLogStore
@inject NavigationManager NavManager
@inject IDialogService DialogService

<h2>Logs</h2>
<MudButton OnClick="OpenDialog" StartIcon="@Icons.Material.Outlined.FileUpload" Variant="Variant.Filled" Color="Color.Primary" Class="my-4">
    Import file - CSV
</MudButton>
<MudSimpleTable Elevation="0" Hover="true">
    <thead>
        <tr>
            <th>Name</th>
            <th>Mine</th>
            <th>Size</th>
            <th>Modified</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var logFile in _logs)
        {
            <tr>
                <td>
                    <MudText Typo="Typo.subtitle2">@logFile.Metadata.Name</MudText>
                </td>
                <td>
                    <MudFab Icon="@Icons.Material.Outlined.PrecisionManufacturing" Size="Size.Small" Color="Color.Primary" OnClick='() => NavManager.NavigateTo("/Mine/" + logFile.Metadata.Name)'/>
                </td>
                <td>
                    <MudText Typo="Typo.subtitle2">@Utils.GetBytesReadable(logFile.Metadata.Size)</MudText>
                </td>
                <td>
                    <MudText Typo="Typo.subtitle2">@Utils.GetDateReadable(logFile.Metadata.Modified)</MudText>
                </td>
                <td>
                    <MudFab Icon="@Icons.Material.Outlined.Delete" Size="Size.Small" OnClick="() => RemoveLog(logFile.Metadata.Name)"/>
                </td>
            </tr>
        }
    </tbody>
</MudSimpleTable>

@code {
    private List<EventLogFile> _logs = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadLogs();
    }

    private async Task LoadLogs()
    {
        _logs = await EventLogStore.GetAll();
    }
    
    private async Task OpenDialog()
    {
        await DialogService.Show<DialogLogUplaod>("Import file - CSV").Result;
        await LoadLogs();
    }

    private async Task RemoveLog(string logFileName)
    {
        await EventLogStore.Remove(logFileName);
        await LoadLogs();
    }
}